---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection, render } from 'astro:content'; // <-- Add render here
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Render content for each post
const postsWithContent = await Promise.all(
    posts.map(async (post) => {
        const { Content } = await render(post);
        return { ...post, Content };
    })
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {

				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(100% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			
			ul li img {
				margin-bottom: 2rem;
				margin-top: 2rem;
				border-radius: 12px;
				max-width: 100%;
				margin: auto;
			}

			.title {
				margin-top: 50px;
				color: rgb(var(--black));
				line-height: 1;
				text-align: center;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				text-align: center;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				
<ul>
    {
        postsWithContent.map((post) => (
            <li>
                {/* <img width={720} height={360} src={post.data.heroImage} alt="" /> */}
                <h4 class="title my-10">{post.data.title}</h4>
                <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                </p>
                <div class="my-10 text-left">
                    <post.Content />
                </div>
                <hr class="my-10" style="border: 1px solid gray;"/>
            </li>
        ))
    }
</ul>

			</section>
		</main>
		<Footer />
	</body>
</html>
